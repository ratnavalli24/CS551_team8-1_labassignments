<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sindhu.ase3.GFirebaseActivity"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/firebase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Congrats !! You are Loggedin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:layout_below="@id/bupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view"
        />

    <Button

        android:id="@+id/button_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="49dp"

        android:background="@drawable/editextstyle"
        android:gravity="center"
        android:text="get Data"
        android:textColorHint="#f23557" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_process"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:text="Tech Champs"
        android:textSize="24sp" />


    <Button
        android:id="@+id/lpLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firebase_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/buttonstyleselect"
        android:gravity="center"
        android:text="Logout"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lpLogout"
        android:layout_marginTop="21dp"
        android:background="@drawable/editextstyle"
        android:gravity="center"
        android:text="Upload"
        android:textColorHint="#f23557" />
</RelativeLayout>
